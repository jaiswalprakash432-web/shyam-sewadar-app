        const navTabs = document.getElementById('nav-tabs');
        const contentArea = document.getElementById('content-area');
        let currentActiveTab = 'Mantra'; // Default tab

        // Function to render the navigation tabs
        function renderTabs() {
            navTabs.innerHTML = ''; // Clear existing tabs
            Object.keys(contentData).forEach(key => {
                const data = contentData[key];
                const button = document.createElement('button');
                button.className = `flex items-center justify-center p-3 rounded-full text-sm font-medium transition duration-150 ease-in-out whitespace-nowrap shadow-md
                                    ${key === currentActiveTab ? 'active-tab' : 'inactive-tab'}`;
                button.innerHTML = data.icon + key;
                button.setAttribute('data-tab', key);
                button.onclick = () => switchTab(key);
                navTabs.appendChild(button);
            });
        }

        // Function to switch content view
        function switchTab(tabName) {
            currentActiveTab = tabName;
            const data = contentData[tabName];

            // 1. Update Tabs visual state
            renderTabs();

            // 2. Update Content Area
            contentArea.innerHTML = `
                <div class="pb-8">
                    <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-6 border-b-2 border-gray-200 pb-2">
                        ${data.title}
                    </h2>
                    <div class="p-2">
                        ${data.content}
                    </div>
                </div>
            `;
            contentArea.scrollTo(0, 0); // Scroll to top on tab switch
        }

        // Function to simulate Bhajan play (since actual audio is not supported here)
        function simulatePlay(bhajanName) {
            const messageBox = document.getElementById('play-message');
            messageBox.textContent = `üé∂ '${bhajanName}' ‡§≠‡§ú‡§® ‡§ö‡§≤‡§æ‡§®‡•á ‡§ï‡•Ä ‡§™‡•ç‡§∞‡§ï‡•ç‡§∞‡§ø‡§Ø‡§æ ‡§∂‡•Å‡§∞‡•Ç ‡§π‡•ã ‡§ó‡§à ‡§π‡•à‡•§`;
            messageBox.classList.remove('hidden');
            
            setTimeout(() => {
                messageBox.classList.add('hidden');
            }, 3000); // Hide message after 3 seconds
        }

        // Initialize the app on load
        window.onload = function() {
            // Log to console for Firebase best practice (though no Firestore is used here)
            // console.log("Initializing Shyam Sewadar Web App.");
            renderTabs();
            switchTab(currentActiveTab); // Load default content
        };
    </script>
</body>
</html>

